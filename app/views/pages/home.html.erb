<div class="cards">
  <% @campers.each do |camper| %>
    <% if camper.availability  %>
      <div class="card-product">
        <img src=<%=camper.photo_url%> />
        <div class="card-product-infos">
          <h2><%= camper.model %></h2>
          <ul>
            <% camper.description.delete("[]\"").split(',').each_with_index do |item , i| %>
              <li><%= item %></li>
              <% break if i >= 6 %>
            <% end  %>
          </ul>
          <h3><%= camper.price %>â‚¬</h3>
        </div>
      </div>
    <% end  %>
  <% end %>
